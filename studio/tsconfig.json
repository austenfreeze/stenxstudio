{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",   // âœ… Changed from "bundler" to "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "incremental": true,
"types": ["@types/react", "node"],

    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@lib/*": ["lib/sanity/*"],
      "@sanity/*": ["studio/schemaTypes/*"],
      "@/*": ["./*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/sanity/types.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
